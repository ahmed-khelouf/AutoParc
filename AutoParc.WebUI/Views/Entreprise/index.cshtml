@model AutoParc.WebUI.ViewsModels.Entreprise.EntrepriseIndexViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container">
    <h2>@Model.PageTitle</h2>

    <table class="table table-bordered table-striped">
        
        <tr>
            <th>Nom de l'Entreprise</th>
            <th>Contrat</th>
            <th>Actions</th>
        </tr>
        
        <tbody>
        @foreach (var viewModel in Model.Entreprise)
        {
            <partial name="_EntrepriseRow" model="viewModel" />
        }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<style>
    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    table th, table td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd; 
    }

    table th {
       
    }

    .btn-view-details {
        background-color: #28a745;
        color: white;
        padding: 5px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-view-details:hover {
        background-color: #218838;
    }

    .btn-view-details:focus {
        outline: none;
    }

    .text-success {
        color: green;
        font-weight: bold;
    }

    .text-danger {
        color: red;
        font-weight: bold;
    }
</style>
