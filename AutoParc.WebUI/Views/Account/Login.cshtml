@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AutoParc.WebUI.ViewsModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Ajout de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ2QFJn68fJ4dWr5fD0oEpt6Lce+zHl2ipMkcRZ9FBeUepwTeM5hTzkMzZJb" crossorigin="anonymous">
    <style>
        .container {
            max-width: 500px;
            margin-top: 50px;
        }

        h1 {
            text-align: center;
            color: #2d3e50;
        }

        .form-group label {
            font-size: 14px;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            width: 100%;
            padding: 10px;
        }

        .btn-custom:hover {
            background-color: #0056b3;
        }

        .text-danger {
            color: #e74c3c;
        }
    </style>
</head>
<body>
<div class="container">
    <h2 class="text-center">Se connecter</h2>

    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Entrez votre email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Mot de passe</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Entrez votre mot de passe" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Case à cocher "Se souvenir de moi" 
        <div class="mb-3">
            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                <label class="form-check-label" asp-for="RememberMe">Se souvenir de moi</label>
            </div>
        </div> -->


        <div class="mb-3">
            <button type="submit" class="btn btn-custom">Se connecter</button>
        </div>
    </form>

    <!--
   <div class="text-center mt-3">
       <p>Pas encore de compte? <a href="@Url.Action("Register", "Account")">Créer un compte</a></p>
   </div>-->
</div> 

<!-- Ajout des scripts Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0rwGZL7s9zzEz1U2XxEYbYhZfRqaV4DXg5u5/hklU3l/h8f9" crossorigin="anonymous"></script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
</body>
</html>
