
@model AutoParc.WebUI.ViewsModels.Vehicule.GetVehiculeByEntrepriseViewModel

<div class="container mt-5">
    <h1>Liste des voitures</h1>
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("UpdateVehicule", "Employee")" class="btn btn-primary">Associé Vehicule</a>
    </div>
    @if (Model.VehiculeToEntreprise != null && Model.VehiculeToEntreprise.Any())
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped table-bordered table-hover shadow-sm rounded">
                <thead>
                <tr>
                    <th>Marque</th>
                    <th>Modèle</th>
                    <th>Etat</th>
                    <th>Associé</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var vehicule in Model.VehiculeToEntreprise)
                {
                    <tr>
                        <td>@vehicule.Marque</td>
                        <td>@vehicule.Modele</td>
                        <td>@(string.IsNullOrEmpty(vehicule.RaisonIndisponibilite) ? "Bon état" : vehicule.RaisonIndisponibilite)</td>
                        <td>@(vehicule.Employe != null ? vehicule.Employe.Nom : "Pas encore associé")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">Aucun véhicule associé à cette entreprise.</p>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .container {
        max-width: 1200px;
        margin-top: 30px;
    }

    h2 {
        font-size: 2rem;
        color: #343a40;
        font-weight: bold;
    }

    .d-flex .btn-success {
        font-weight: bold;
        border-radius: 50px;
        padding: 12px 25px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-success:hover {
        background-color: #218838;
        transform: scale(1.05);
    }

    .table {
        border-radius: 10px;
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

    .table th, .table td {
        padding: 12px 15px;
        text-align: left;
    }

    .table th {
        background-color: #007bff;
        color: white;
        text-transform: uppercase;
    }

    .table tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s;
    }

    .table td a {
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .text-success {
        color: #28a745;
        font-weight: bold;
    }

    .text-danger {
        color: #dc3545;
        font-weight: bold;
    }

    .shadow-sm {
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 10px;
    }
</style>
