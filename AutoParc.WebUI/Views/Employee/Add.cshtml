@model AutoParc.WebUI.ViewsModels.Employee.AddEmployeeViewModel

@{
    ViewData["Title"] = "Enregistrement d'un nouveau salari√©";
}

<div class="container">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Add" method="post" class="mb-4">
        <div class="form-group mb-3">
            <label asp-for="EntrepriseToAdd.Nom" class="control-label"></label>
            <input asp-for="EntrepriseToAdd.Nom" class="form-control rounded-pill border-light" />
            <span asp-validation-for="EntrepriseToAdd.Nom" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EntrepriseToAdd.Prenom" class="control-label"></label>
            <input asp-for="EntrepriseToAdd.Prenom" class="form-control rounded-pill border-light" />
            <span asp-validation-for="EntrepriseToAdd.Prenom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Enregistrer" class="btn btn-primary rounded-pill" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .container {
        max-width: 600px;
        margin-top: 30px;
    }

    h2 {
        font-size: 2rem;
        color: #343a40;
    }

    .form-group input {
        border-radius: 50px;
        box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
    }

    .form-group label {
        font-weight: bold;
        color: #343a40;
    }

    .form-group span.text-danger {
        color: #dc3545;
    }

    .btn {
        font-weight: bold;
        padding: 12px 25px;
        border-radius: 25px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .rounded-pill {
        border-radius: 50px;
    }
</style>
