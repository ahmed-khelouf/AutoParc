@model AutoParc.WebUI.ViewsModels.Employee.UpdateVehiculeViewModel

@{
    ViewData["Title"] = "Update Vehicule";
}

<h2>Associé Vehicule</h2>

<form asp-action="UpdateVehicule" method="post">
    <div class="form-group">
        <label asp-for="SelectedEmployeeId" class="control-label">Employee</label>
        <select asp-for="SelectedEmployeeId" class="form-control" asp-items="Model.Employees"></select>
    </div>
    <div class="form-group">
        <label asp-for="SelectedVehiculeId" class="control-label">Vehicule</label>
        <select asp-for="SelectedVehiculeId" class="form-control" asp-items="Model.Vehicules"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Associé" class="btn btn-primary" />
    </div>
</form>